# MongoDB
MONGO_URL=mongodb+srv://cluster.mongodb.net
MONGO_USER=myuser
MONGO_PASSWORD=mypassword
MONGO_DB_NAME=mydocs

# Azure Document Intelligence
AZURE_DI_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_DI_API_KEY=your-api-key

# Azure OpenAI (used by litellm for embeddings)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_BASE=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Azure Blob Storage (managed backend)
# Option 1: Connection string (simple, for local dev / Azurite)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# Option 2: Account name + account key
# AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
# Option 3: Account name only (uses DefaultAzureCredential â€” managed identity, Azure CLI, etc.)
# AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
# AZURE_STORAGE_CONTAINER_NAME=managed

# Storage backend: "local" (default) or "azure_blob"
# MYDOCS_STORAGE_BACKEND=local

# Microsoft Entra ID (Azure AD) -- OAuth authentication
# Leave ENTRA_TENANT_ID empty to disable auth (local development)
ENTRA_TENANT_ID=
ENTRA_CLIENT_ID=
# ENTRA_ISSUER=https://login.microsoftonline.com/<tenant-id>/v2.0

# Vite build-time vars for the UI (passed as Docker build args)
# VITE_ENTRA_CLIENT_ID=  (same as ENTRA_CLIENT_ID)
# VITE_ENTRA_AUTHORITY=https://login.microsoftonline.com/<tenant-id>

# Optional
MYDOCS_DATA_FOLDER=./data
MYDOCS_CONFIG_ROOT=./config
SERVICE_NAME=mydocs
LOG_LEVEL=INFO
